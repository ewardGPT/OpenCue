{
  "name": "opencue",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:router\" \"npm:dev:desktop\"",
    "dev:router": "tsx server/router/index.ts",
    "dev:desktop": "wait-on tcp:3001 && electronmon --trace-warnings --inspect=0 electron/main.ts",
    "build:desktop": "tsc && electron-builder -mwl",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "concurrently": "^8.2.2",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "wait-on": "^7.2.0"
  }
}
